<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Orders"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/orderedOrdersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orderd orders"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/deliveredOrdersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/orderedOrdersButton"
        android:layout_alignStart="@+id/orderedOrdersButton"
        android:layout_centerVertical="true"
        android:text="Delivered orders" />

    <Button
        android:id="@+id/paiedOrdersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/deliveredOrdersButton"
        android:layout_alignStart="@+id/deliveredOrdersButton"
        android:layout_below="@+id/deliveredOrdersButton"
        android:layout_marginTop="61dp"
        android:text="paiedOrders" />
</RelativeLayout>