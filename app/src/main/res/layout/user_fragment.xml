<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:weightSum="1">


    <TextView
        android:id="@+id/userName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/userBirth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <android.support.design.widget.TabLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/side_nav_bar"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tabLayout">

    </android.support.design.widget.TabLayout>

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_alignBottom="@+id/tabLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:id="@+id/userGender"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/userBirth" />

    <TextView
        android:id="@+id/userTitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="My Profile"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:layout_alignEnd="@+id/userName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:text="Email"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignStart="@+id/userEmail"
        android:layout_alignEnd="@+id/userEmail" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_below="@+id/userEmail"
        android:text="Birthday"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignEnd="@+id/userBirth"
        android:layout_alignStart="@+id/userBirth" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/userBirth"
        android:layout_alignStart="@+id/userBirth"
        android:layout_alignEnd="@+id/userBirth" />

</RelativeLayout>