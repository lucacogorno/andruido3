<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Admin Area"
        android:textSize="30sp" />

    <Button
        android:id="@+id/addProdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminTitle"
        android:layout_marginTop="55dp"
        android:text="Add Product"
        android:layout_alignStart="@+id/adminTitle"
        android:layout_alignEnd="@+id/adminTitle" />

    <Button
        android:id="@+id/editProductPriceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addProdButton"
        android:layout_marginTop="54dp"
        android:text="Scan Product"
        android:layout_alignStart="@+id/addProdButton"
        android:layout_alignEnd="@+id/addProdButton" />
</RelativeLayout>